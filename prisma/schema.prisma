generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id          String @id @default(cuid())
  name        String
  price       Float
  category    String
  image       String
  description String
  stock       Int
  storeId     String
  store       Store  @relation(fields: [storeId], references: [id])
}

model Order {
  id               String   @id @default(cuid())
  customerName     String
  customerWhatsapp String
  tableNumber      String
  items            Json
  total            Float
  status           String   @default("BARU")
  createdAt        DateTime @default(now())
  notes            String?
  paymentMethod    String
  paymentProof     String?
  deliveryMethod   String
  storeId          String
  store            Store    @relation(fields: [storeId], references: [id])
}

model Store {
  id             String    @id @default(cuid())
  storeName      String    @unique
  ownerName      String
  address        String
  whatsapp       String
  bankAccount    String
  password       String
  paymentMethods String[]  @default(["Tunai"])
  qrisImage      String?
  orders         Order[]
  products       Product[]
}
